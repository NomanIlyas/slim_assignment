{
    "name": "noman/assignment",
    "type": "project",
    "require": {
        "php": "^8.1.0",
        "ext-json": "*",
        "ext-sqlite3": "*",
        "awurth/slim-validation": "^3.4",
        "doctrine/dbal": "^2.6",
        "doctrine/orm": "^2.12",
        "nyholm/psr7": "^1.5",
        "nyholm/psr7-server": "^1.0",
        "ramsey/uuid": "^4.5",
        "ramsey/uuid-doctrine": "^1.8",
        "slim/slim": "^4.10",
        "symfony/cache": "^6.1",
        "uma/dic": "^3.0",
      "ext-openssl": "*"
    },
    "autoload": {
        "psr-4": {
            "UMA\\Assignment\\": "src/"
        }
    },
    "scripts": {
        "serve": [
            "@composer install",
            "php vendor/bin/doctrine orm:schema:update --force",
            "php -S localhost:8000 -t public public/index.php"
        ]
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    }
}
